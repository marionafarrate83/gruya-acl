<%- include('../partials/header', { title: 'Editar Usuario', user: user }) %>
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center">Editar Usuario</h4>
            </div>
            <div class="card-body">
                <% if (error) { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } %>
                
                <form action="/users/edit/<%= editUser._id %>" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="residenceNumber">Número de Residencia</label>
                                <input type="text" class="form-control" id="residenceNumber" name="residenceNumber" 
                                       value="<%= editUser.residenceNumber %>" required>
                                <% if (errors && errors.find(e => e.path === 'residenceNumber')) { %>
                                    <small class="text-danger"><%= errors.find(e => e.path === 'residenceNumber').msg %></small>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="role">Rol</label>
                                <select class="form-control" id="role" name="role" required>
                                    <option value="residente" <%= editUser.role === 'residente' ? 'selected' : '' %>>Residente</option>
                                    <option value="guardia" <%= editUser.role === 'guardia' ? 'selected' : '' %>>Guardia</option>
                                    <option value="administrador" <%= editUser.role === 'administrador' ? 'selected' : '' %>>Administrador</option>
                                </select>
                                <% if (errors && errors.find(e => e.path === 'role')) { %>
                                    <small class="text-danger"><%= errors.find(e => e.path === 'role').msg %></small>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" class="form-control" id="email" name="email" 
                               value="<%= editUser.email %>" required>
                        <% if (errors && errors.find(e => e.path === 'email')) { %>
                            <small class="text-danger"><%= errors.find(e => e.path === 'email').msg %></small>
                        <% } %>
                    </div>
                    
                    <div class="form-group">
                        <label for="phone">Número de Teléfono</label>
                        <input type="tel" class="form-control" id="phone" name="phone" 
                               value="<%= editUser.phone %>" required>
                        <% if (errors && errors.find(e => e.path === 'phone')) { %>
                            <small class="text-danger"><%= errors.find(e => e.path === 'phone').msg %></small>
                        <% } %>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="/users" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Actualizar Usuario</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>