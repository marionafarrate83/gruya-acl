<%- include('../partials/header', { title: 'Gestión de Usuarios', user: user }) %>
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Gestión de Usuarios</h2>
    <a href="/users/create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nuevo Usuario
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>N° Residencia</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Rol</th>
                        <th>Fecha Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length === 0) { %>
                        <tr>
                            <td colspan="6" class="text-center">No hay usuarios registrados</td>
                        </tr>
                    <% } %>
                    
                    <% users.forEach(userItem => { %>
                        <tr>
                            <td><%= userItem.residenceNumber %></td>
                            <td><%= userItem.email %></td>
                            <td><%= userItem.phone %></td>
                            <td>
                                <span class="badge bg-<%= 
                                    userItem.role === 'administrador' ? 'danger' : 
                                    userItem.role === 'guardia' ? 'warning' : 'info' 
                                %>">
                                    <%= userItem.role %>
                                </span>
                            </td>
                            <td><%= userItem.createdAt.toLocaleDateString('es-ES') %></td>
                            <td>
                                <a href="/users/edit/<%= userItem._id %>" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <form action="/users/delete/<%= userItem._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" 
                                            onclick="return confirm('¿Estás seguro de eliminar este usuario?')">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>